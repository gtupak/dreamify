<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamify.NewBucketItem"
    android:id="@+id/f"
    android:background="@drawable/adventure_pattern_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Bucket Item"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#212121"
        android:freezesText="false"
        android:textAllCaps="false"
        android:soundEffectsEnabled="false"
        android:singleLine="false"
        android:padding="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/confirmItemButton"
        android:background="#212121"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/textView2"
        android:layout_marginTop="141dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/confirmItemButton"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:background="#CDDC39"
        android:textColor="#313e2c"
        android:onClick="onAddButtonClick" />


</RelativeLayout>
